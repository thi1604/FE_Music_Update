extends ../../layouts/default.pug
//- include ../../mixins/select-tree.pug

block main
  if (role.permissions.includes("singers_create"))
    h1(class="mb-4") Thêm mới danh mục ca sĩ

    form(
      action=`/${prefixAdmin}/singers/create`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Tên ca sĩ
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          required
        )
      div(class="form-group")
        label(for="desc") Mô tả
        textarea(
          type="text"
          class="form-control"
          id="desc"
          name="description"
          rows="5"
          textarea-mce
        )
      div(
        class="form-group"
        upload-image
      )
        label(for="avatar") Ảnh
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=""
          class="image-preview"
          upload-image-preview
        )
      div(class="form-group ") Trạng thái nổi bật
        div(class="form-group form-check form-check-inline ml-3")
          input(
            type="radio"
            class="form-check-input"
            id="OS"
            name="outStanding"
            value="true"
          )
          label(for="OS" class="form-check-label") Nổi bật
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="no-OS"
            name="outStanding"
            value="false"
            checked
          )
          label(for="no-OS" class="form-check-label") Không nổi bật
      div(class="form-group ") Trạng thái hoạt động
        div(class="form-group form-check form-check-inline ml-3")
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked
          )
          label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
          input(
            type="radio"
            class="form-check-input"
            id="statusInActive"
            name="status"
            value="inactive"
          )
          label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Tạo mới
        a(
          href=`${prefixAdmin}/singers`
          class="btn btn-danger ml-5"
        ) Hủy