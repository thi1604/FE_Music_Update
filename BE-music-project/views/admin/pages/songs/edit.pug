extends ../../layouts/default.pug


block main
  if (role.permissions.includes("songs_edit"))
    h1(class="mb-4") #{pageTitle}
    form(
      action=`/${prefixAdmin}/songs/edit/${product.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
          value=product.title
        )
      div(class="form-group")
        label(for="singer") Ca sĩ (Giữ ctrl để chọn nhiều ca sĩ)
        select(
          name="singerIds"
          id="singer"
          class="form-control"
          required
          multiple
        )
          each item in singers
            if (product.singerIds.includes(item.id))
              option(value=item.id selected) #{item.fullName}
            else
              option(value=item.id) #{item.fullName}
      div(class="form-group")
        label(for="topic") Chủ đề
        select(
          name="topicId"
          id="topic"
          class="form-control"
          required
        )
          each item in listTopics
            if (item.id == product.topicId)
              option(value=item.id selected) #{item.title}
            else
              option(value=item.id) #{item.title}
      div(class="form-group")
        label(for="desc") Mô tả
        textarea(
          class="form-control"
          id="desc"
          name="description"
          rows="5"
          textarea-mce
        ) #{product.description}
      div(class="form-group")
          label(for="desc") Lời bài hát
          textarea(
            type="text"
            class="form-control"
            id="lyrics"
            name="lyrics"
            rows="5"
          ) #{product.lyrics}
      div(
        class="form-group"
        upload-image
      )
        label(for="avatar") Ảnh
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=product.avatar
          class="image-preview"
          upload-image-preview
        )
      div(
          class="form-group"
        )
          label(for="listenNumber") Số lượt nghe
          input(
            type="number"
            class="form-control"
            id="listenNumber"
            name="listenNumber"
            min=0
            value=product.listenNumber
          )
      div(
          class="form-group"
          upload-audio
        )
          label(for="audio") File âm thanh
          input(
            type="file"
            class="form-control-file"
            id="audio"
            name="audio"
            accept="audio/*"
            upload-audio-input
          )
          audio(controls upload-audio-play class="mt-3")
            source(src=product.audio)
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked=(product.status == "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked=(product.status == "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật
        a(
          href = `/${prefixAdmin}/songs`
          class="btn btn-danger ml-5"
        ) Hủy
      