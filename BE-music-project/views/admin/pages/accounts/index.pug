extends ../../layouts/default.pug

block main
  if (role.permissions.includes("accounts_view"))
    h1(class="mb-4") Danh sách tài khoản admin

    .card.mb-3
      .card-header Danh sách
      .card-body
        if (role.permissions.includes("accounts_create"))
          .row
            .col-8
            .col-4.text-right
              a(
                href=`/${prefixAdmin}/accounts/create`
                class="btn btn-outline-success"
              ) + Thêm mới
        table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th STT
              th Avatar
              th Họ tên
              th Phân quyền
              th Email
              if (role.permissions.includes("accounts_edit"))
                th Trạng thái
              th Hành động

          tbody
            each item, index in accounts
              tr 
                td #{index+1}
                td
                  img(
                    src=item.avatar
                    alt=item.fullName
                    width="50px"
                    height="auto"
                  )
                td #{item.fullName}
                td #{item.roleName}
                td #{item.email}
                if (role.permissions.includes("accounts_edit"))
                  td
                    if (item.status === "active")
                      button(
                        link=`/${prefixAdmin}/accounts/change-status/${item.id}/inactive`
                        class="badge badge-success"
                        data-status="inactive"
                        button-change-status
                      ) Hoạt động
                    else
                      button(
                        link=`/${prefixAdmin}/accounts/change-status/${item.id}/active`
                        class="badge badge-danger"
                        data-status="active"
                        button-change-status
                      ) Dừng hoạt động
                td
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`/${prefixAdmin}/accounts/detail/${item.id}`
                  ) Chi tiết
                  if (role.permissions.includes("accounts_edit"))
                    a(
                      class="btn btn-warning btn-sm ml-1"
                      href=`/${prefixAdmin}/accounts/edit/${item.id}`
                    ) Sửa
                  if (item.fullName != accounts.fullName)
                    if (role.permissions.includes("accounts_delete"))
                      button(
                        class="btn btn-danger btn-sm ml-1"
                        link-id-button=`/${prefixAdmin}/accounts/delete/${item.id}`
                        delete-account-id=`${item.id}`
                      ) Xóa