extends ../../layouts/default.pug

block main
  if(role.permissions.includes("users_view"))
    if (product.fullName)
      h1(class="mb-4") #{product.fullName}
    if (product.email)
      div(class="mb-4")
        span Email:  #{product.email}
    if (product.avatar)
      div(class="mb-4") Avatar
        img(
          src=product.avatar
          style="width: 100px"
        )

    if (product.status)
      div(class="mb-4")
        span Trạng thái:
        if (product.status === "active")
          span(class="badge badge-success") Hoạt động
        else
          span(class="badge badge-danger") Dừng hoạt động
    if (!product.deleted)
      div(class="mb-4")
        span Hiện trạng:
        span(class="badge badge-success") Không bị khóa tài khoản
    else
      div(class="mb-4")
        span Hiện trạng:
        span(class="badge badge-success") Bị khóa tài khoản

