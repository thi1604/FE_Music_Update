extends ../../layouts/default.pug


block main
  if(role.permissions.includes("users_edit"))
    h1(class="mb-4") #{pageTitle}
    form(
      action=`/${prefixAdmin}/users/edit/${product.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Họ và Tên
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          required
          value=product.fullName
        )
      div(class="form-group")
        label(for="email") Email
        input(
          type="text"
          class="form-control"
          id="email"
          value=product.email
          disabled 
        )
        div(class="form-group")
        label(for="password") Password
        input(
          type="text"
          class="form-control"
          id="password"
          name="password"
        )
        div(class="form-group")
        label(for="tokenUser") TokenUser
        input(
          type="text"
          class="form-control"
          id="tokenUser"
          name="tokenUser"
          value=product.tokenUser
        )
      div(
        class="form-group"
        upload-image
      )
        label(for="avatar") Ảnh
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=product.avatar
          class="image-preview"
          upload-image-preview
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked=(product.status == "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked=(product.status == "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhật
        a(
          href = `/${prefixAdmin}/users`
          class="btn btn-danger ml-5"
        ) Hủy
      