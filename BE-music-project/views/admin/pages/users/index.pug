extends ../../layouts/default.pug
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/box-actions.pug


block main
  if(role.permissions.includes("users_view"))
    h1(class="mb-4") Quản lý người dùng 
    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
          .col-6 
            +filterStatus(listFilter)
          .col-6
            +search(keyword)
    .card.mb-3
      .card-header Hành động
      .card-body()
        +box-actions(`/${prefixAdmin}/users/change-many-status`, listActions)
    .card.mb-3
      .card-header Danh sách
      .card-body
        table.table.table-hover.table-sm
          thead
            tr
              th
                input(
                  type="checkbox"
                  change-status-all
                )
              th STT
              th Hình ảnh
              th Họ và tên
              th Email
              if(role.permissions.includes("users_edit"))
                th Trạng thái
              th Hành động

          tbody
            for item, index in users
              tr
                td
                  input(
                  type="checkbox"
                  change-status-item
                  value = item.id 
                ) 
                td #{index + 1}
                td
                  img(
                    src= item.avatar
                    alt= item.fullName
                    width="50px"
                    height="auto"
                  )
                td #{item.fullName}
                td #{item.email}
                if(role.permissions.includes("users_edit"))
                  td
                    if(item.status == 'active')
                      button(
                        link =`/${prefixAdmin}/users/change-status/${item.id}/inactive`
                        class="badge badge-success"
                        button-change-status
                      ) Hoạt động 
                    else 
                      button(
                        link =`/${prefixAdmin}/users/change-status/${item.id}/active` 
                        class="badge badge-danger"
                        button-change-status 
                      ) Dừng hoạt động 
                td
                  a(
                    class="btn btn-info btn-sm mr-1"
                    href= `/${prefixAdmin}/users/detail/${item.id}`
                  ) Chi tiết
                  if(role.permissions.includes("users_edit"))
                    a(
                      class="btn btn-warning btn-sm"
                      href= `/${prefixAdmin}/users/edit/${item.id}`
                    ) Sửa
                  if(role.permissions.includes("users_delete"))
                    button(
                      class="btn btn-danger btn-sm ml-1"
                      link-id-button = `/${prefixAdmin}/users/delete/${item.id}` 
                    ) Xóa
      div(class="mx-auto")
        +pagination(pagination)
