extends ../../layouts/default.pug
include ../../mixins/pagination.pug


block main
  if(role.permissions.includes("songs-category_view"))
    h1(class="mb-4") Danh mục chủ đề
    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4.text-right
            if(role.permissions.includes("songs-category_create"))
              a(
                href=`/${prefixAdmin}/topics/create`
                class="btn btn-outline-success"
              ) + Thêm mới

      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Trạng thái
            th Hành động
        tbody
          each item, index in listRecord
            tr
              td #{index + 1}
              td
                img(
                  src=item.avatar
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td
                if (item.status === "active")
                  button(
                    link =`/${prefixAdmin}/topics/change-status/${item.id}/inactive`
                    class="badge badge-success"
                    button-change-status
                  ) Hoạt động 
                else
                  button(
                    link =`/${prefixAdmin}/topics/change-status/${item.id}/active`
                    class="badge badge-danger"
                    button-change-status
                  ) Dừng Hoạt động 
              td
                a(
                  class="btn btn-secondary btn-sm"
                  href=`/${prefixAdmin}/topics/detail/${item.id}`
                ) Chi tiết
                if(role.permissions.includes("songs-category_edit"))
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`/${prefixAdmin}/topics/edit/${item.id}`
                  ) Sửa
                if (role.permissions.includes("songs-category_delete"))
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete
                    link-id-button=`/${prefixAdmin}/topics/delete/${item.id}` 
                    data-id=item.id
                  ) Xóa
      div(class="mx-auto")
        +pagination(pagination)       